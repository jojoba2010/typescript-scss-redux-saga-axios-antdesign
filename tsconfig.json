{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "removeComments": false,
        "rootDirs": ["src"],
        "baseUrl": "./src",
        "paths": {
            "@store/*": ["store/*"],
            "@utils/*": ["utils/*"],
            "@features/*": ["features/*"],
            "@app-store/*": ["store/*"],
            "@typings/*": ["../typings/*"],
            "@UI/*": ["components/UI/*"],
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@hooks/*": ["hooks/*"]
        },
        "jsx": "react",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": ["dom", "dom.iterable", "es5", "es2015.promise", "es6", "es7", "esnext"],
        "skipLibCheck": true,
    }
}
